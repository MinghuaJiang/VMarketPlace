<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.virginia.cs.vmarketplace">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_48dp"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.FullScreen">
        <activity
            android:name=".view.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.login.LoginActivity"
            android:label="@string/login"
            android:theme="@style/AppTheme" />
        <activity android:name=".view.MainActivity" />
        <activity
            android:name=".view.ProfilePublishActivity"
            android:label="@string/published_by_me"
            android:parentActivityName=".view.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.SoldActivity"
            android:label="@string/sold_by_me"
            android:parentActivityName=".view.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.BoughtActivity"
            android:label="@string/bought_by_me"
            android:parentActivityName=".view.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.FavoriteActivity"
            android:label="@string/added_to_favorite"
            android:parentActivityName=".view.MainActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".view.CameraActivity" />
        <activity
            android:name=".view.SoldReviewActivity"
            android:label="@string/review_detail"
            android:parentActivityName=".view.SoldActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.MessageDetailActivity"
            android:label="Message Detail"
            android:parentActivityName=".view.MainActivity"
            android:theme="@style/AppTheme.Message" />
        <activity android:name=".view.RegisterActivity"/>
        <activity
            android:name=".view.PublishActivity"
            android:label="@string/publish"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".view.WritePostActivity"
            android:label="@string/write_post"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>