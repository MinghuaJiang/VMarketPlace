<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/home_tab_image"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/home_post_avatar"
                android:layout_margin="8dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/home_post_avatar"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/home_post_user_name"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/home_post_user_department"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/home_post_image_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/windowBackground"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/product_pic_0"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                />
            <ImageView
                android:id="@+id/product_pic_1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                />
            <ImageView
                android:id="@+id/product_pic_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                />
            <ImageView
                android:id="@+id/product_pic_3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                />
            <ImageView
                android:id="@+id/product_pic_4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                />
            <ImageView
                android:id="@+id/product_pic_5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                />
            <ImageView
                android:id="@+id/product_pic_6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                />
            <ImageView
                android:id="@+id/product_pic_7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                />
            <ImageView
                android:id="@+id/product_pic_8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                />
            <ImageView
                android:id="@+id/product_pic_9"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                />

            <!--<GridView-->
                <!--android:id="@+id/home_post_image_gallery"-->
                <!--android:layout_width="900dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:horizontalSpacing="@dimen/content_padding"-->
                <!--android:numColumns="10"-->
                <!--android:paddingBottom="@dimen/content_padding"-->
                <!--android:paddingLeft="@dimen/content_padding"-->
                <!--android:paddingRight="@dimen/content_padding"-->
                <!--android:paddingTop="@dimen/content_padding" />-->
        </LinearLayout>

        <TextView
            android:id="@+id/home_post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/separator_above_add"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/separator"
            android:layout_marginTop="2dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/home_post_locale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/content_margin"
                />
            <TextView
                android:id="@+id/home_post_thumbup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/content_margin"
                />
        </RelativeLayout>

        <!--<TextView-->
            <!--android:id="@+id/home_post_separator"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/separator_height"-->
            <!--android:background="@color/separator"-->
            <!--android:layout_marginTop="8dp"-->
            <!--/>-->
    </LinearLayout>
</RelativeLayout>