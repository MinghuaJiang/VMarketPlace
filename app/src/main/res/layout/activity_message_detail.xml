<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@color/tan_background"
        android:minHeight="@dimen/list_item_height_medium"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/list_item_height"
            android:layout_height="@dimen/list_item_height"
            android:paddingLeft="16dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/ride_96dp"
            android:gravity="center"
            />
        <LinearLayout
            android:id="@+id/text_container"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="@dimen/list_item_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/image"
            android:paddingLeft="16dp"
            >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@android:color/black"
                android:text="baobao"
                />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@android:color/black"
                android:text = "$200"
                />

            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/count"
                android:text="chat before transaction"
                />
        </LinearLayout>
        </RelativeLayout>
        <com.github.bassaer.chatmessageview.views.ChatView
            android:id="@+id/chat_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <RelativeLayout
            android:id="@+id/extra"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_height_medium">
            <ImageView
                android:id="@+id/album"
                android:layout_width="@dimen/list_item_height"
                android:layout_height="@dimen/list_item_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:paddingLeft="24dp"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/album_48dp"
                />
            <ImageView
                android:id="@+id/camera"
                android:layout_width="@dimen/list_item_height"
                android:layout_height="@dimen/list_item_height"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:paddingRight="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="64dp"
                android:background="@drawable/camera_48dp"
                />

        </RelativeLayout>

</LinearLayout>
