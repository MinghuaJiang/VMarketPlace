<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/home_post_avatar"
                android:layout_margin="8dp"
                android:src="@drawable/ic_user"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/home_post_id"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/home_post_online"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>

        <GridLayout
            android:id="@+id/home_post_images"
            android:layout_width="900dp"
            android:layout_height="wrap_content"
            android:columnCount="10"
            android:rowCount="1"
            >
            <ImageView
                android:id="@+id/home_post_img0"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ride_96dp"
                />
            <ImageView
                android:id="@+id/home_post_img1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ride_96dp"
                />
            <ImageView
                android:id="@+id/home_post_img2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:layout_column="2"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ride_96dp"
                />
            <ImageView
                android:id="@+id/home_post_img3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:layout_column="3"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ride_96dp"
                />
            <ImageView
                android:id="@+id/home_post_img4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:layout_column="4"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ride_96dp"
                />
            <ImageView
                android:id="@+id/home_post_img5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:layout_column="5"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ride_96dp"
                />
            <ImageView
                android:id="@+id/home_post_img6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:layout_column="6"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ride_96dp"
                />
            <ImageView
                android:id="@+id/home_post_img7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:layout_column="7"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ride_96dp"
                />
            <ImageView
                android:id="@+id/home_post_img8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:layout_column="8"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ride_96dp"
                />
            <ImageView
                android:id="@+id/home_post_img9"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:layout_column="9"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ride_96dp"
                />
        </GridLayout>

        <TextView
            android:id="@+id/home_post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/separator_above_add"
            android:layout_width="match_parent"
            android:layout_height="@dimen/separator_height"
            android:background="@color/separator"
            android:layout_marginTop="2dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/home_post_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/content_margin"
                />
            <TextView
                android:id="@+id/home_post_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/content_margin"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/home_post_separator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/separator_height"
            android:background="@color/separator"
            android:layout_marginTop="8dp"
            />
    </LinearLayout>
</RelativeLayout>