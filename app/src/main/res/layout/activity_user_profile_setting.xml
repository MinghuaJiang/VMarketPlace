            />

        <TextView
            android:id="@+id/profile_click_school"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:text="@string/click"
            android:textColor="@color/click"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_alignParentRight="true"
            android:gravity="center"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/click"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        />

    <RelativeLayout
        android:id="@+id/text_container_department"
        android:layout_width="match_parent"
        android:background="@color/tan_background"
        android:layout_height="@dimen/list_item_height"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        >

        <TextView
            android:id="@+id/profile_department"
            android:layout_width="@dimen/left_column"
            android:layout_height="match_parent"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@android:color/black"
            android:text="Department"
            android:layout_alignParentLeft="true"
